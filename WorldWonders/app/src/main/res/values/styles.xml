<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="MyCustomThemeToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>


    <style name="MainContent" >
        <item name="android:background">@color/background_list</item>
    </style>

    <style name="MainItemContent">
        <item name="android:background">@color/background_list_item</item>
    </style>

    <style name="MainItemName" >
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainItemCountry">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MainItemDescription">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
